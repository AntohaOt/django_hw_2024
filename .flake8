[flake8]
max-line-length=120
max-local-variables=8
max-complexity=8
max-module-members=10
max-line-complexity=18

exclude = 
    *migrations*,
    *manage*,
    *__init__*,
    *settings*,
    *pycache*,
    *venv*,
    *git*,


extend-ignore=
        # classes without base classes
        WPS306,
        # imports relative to current folder
        WPS300,
        # slash usage for line breaking (better not to)
        N400,
        # dotted import
        WPS301,
        # fstring
        WPS305,
        # multiline
        WPS304,
        # broken flake parameters identation
        WPS317,
        # class without base class
        WPS306,
        # static methods
        WPS602,
        # incorrect unpacking target
        WPS414,
        # multiple assign targets
        WPS429,
        # abstract classes
        B024,
        # private name pattern
        WPS112,
        # complex f-string
        WPS237,
        # errors
        RST210,
        D106,
        WPS226,
        RST213,
        WPS458,
        WPS202,

        WPS318,
        WPS319,

        S106,
        WPS204

per-file-ignores=
        test_*.py:
                # assert usage
                S101,
                # complex lines (ok for test data)
                WPS221
        settings.py:
                # string literal overuse
                WPS226